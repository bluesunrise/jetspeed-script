  <modelVersion>4.0.0</modelVersion>
  <groupId>com.bluesunrise</groupId>
  <artifactId>jetspeed-script</artifactId>
  <version>1.0</version>
  <packaging>jar</packaging>
  <name>jetspeed-script</name>
  <url>http://bluesunrise.com</url>
  <organization>
    <name>Bluesunrise LLC</name>
    <url>${project.url}</url>
