<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="console" class="com.bluesunrise.jetspeed.JetspeedScriptLoggingAppender"/> 

  <logger name="org.apache.jetspeed.util.ServletRequestCleanupService">
    <level value="fatal"/> 
  </logger>

  <root> 
    <priority value="error"/> 
    <appender-ref ref="console"/> 
  </root>
  
</log4j:configuration>
